    <script>
        var socket = io();
        var sendBtn = document.querySelector('#send');
        var comments = document.querySelector('#playlist-comments');

        function makeComment() {
            var comment = $('#placed-comment').val()
            $.post("/api/playlist/comment/<%= playlist._id %>", { comment: comment }).then(res => {
                if (res['statusCode'] == 200) {
                    $('#placed-comment').val('')
                    newComment =
                        $('#playlist-comments').append("<li style='color:#a7bacd;line-height:24px;vertical-align:baseline;font-size: 17px;margin-top: 14px;font-weight: bold'>" + comment + "</li>")
                } else { }
            });
        }

        socket.on('newcomment', function () {
            $.get('/api/playlist/comment/<%= playlist._id %>').then(res => {
                document.querySelector('#playlist-comments').innerHTML = "";
                for(var i = 0;i < res.length ; i ++){
                    $('#playlist-comments').append("<li style='color:#a7bacd;line-height:24px;vertical-align:baseline;font-size: 17px;margin-top: 14px;font-weight: bold'>" + res[i] + "</li>");
                }
            });
        });

    </script>
